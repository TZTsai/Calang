  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Attach using Process Id",
      "type": "python",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Python: Test Examples",
      "type": "python",
      "request": "launch",
      "program": "calc.py",
      "console": "integratedTerminal",
      "args": [
        "-t",
        "-d",
        "tests/egTest.cal",
        "&&",
        "exit",
        "0"
      ]
    },
    {
      "name": "Python: Debug",
      "type": "python",
      "request": "launch",
      "program": "calc.py",
      "console": "integratedTerminal",
      "args": [
        "-d",
        "&&",
        "exit",
        "0"
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Test",
      "type": "python",
      "request": "launch",
      "args": [
        "-t",
        "-d",
        "&&",
        "exit",
        "0"
      ],
      "program": "calc.py",
      "console": "integratedTerminal",
      // "justMyCode": false
    },
    {
      "name": "Python: 当前文件",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      // "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "args": ["&&", "exit", "0"]
      // "justMyCode": false
    },
  ]
}